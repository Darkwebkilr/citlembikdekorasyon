---
// Bu alanda import olmayacak
---
<header class="absolute top-0 rounded-b-xl left-0 right-0 z-50 p-5 transition-all duration-500" id="main-header">
  <div class="container mx-auto flex justify-between items-center">
    <a class="text-2xl font-bold tracking-wider text-white" href="/">
      <img
        src="/image/Logo.png"
        class="w-full max-w-24 md:max-w-[150px] "
        alt="çitlembik logo"
      />
    </a>
    <nav class="hidden md:flex space-x-8">
      <a class="text-white hover:text-[var(--accent-color)] transition-colors duration-300" href="/">Anasayfa</a>
      <a class="text-white hover:text-[var(--accent-color)] transition-colors duration-300" href="/hakkimizda">Hakkımızda</a>
      <div class="relative group" id="desktop-hizmetler-dropdown">
        <a class="text-white hover:text-[var(--accent-color)] transition-colors duration-300 cursor-pointer flex items-center" href="/hizmetler">
          Hizmetler
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </a>
        <div id="desktop-hizmetler-menu" class="absolute left-0 top-full pt-2 w-56 bg-transparent rounded-md shadow-lg z-10 hidden group-hover:block transition-all duration-300">
          <div class="bg-[#c97c34]/90 backdrop-blur-sm rounded-md shadow-lg">
            <a href="/hizmetler/ozel-mobilya-tasarimi" class="block px-4 py-3 text-white hover:bg-white/10 transition-colors duration-200">Özel Mobilya Tasarımı</a>
            <a href="/hizmetler/modern-ahsap-isleri" class="block px-4 py-3 text-white hover:bg-white/10 transition-colors duration-200">Modern Ahşap İşleri</a>
            <a href="/hizmetler/adan-zye-dekorasyon" class="block px-4 py-3 text-white hover:bg-white/10 transition-colors duration-200">A'dan Z'ye Dekorasyon</a>
          </div>
        </div>
      </div>
      <a class="text-white hover:text-[var(--accent-color)] transition-colors duration-300" href="/portfolio">Portföy</a>
      <a class="text-white hover:text-[var(--accent-color)] transition-colors duration-300" href="/blog">Blog</a>
      <a class="text-white hover:text-[var(--accent-color)] transition-colors duration-300" href="/iletisim">İletişim</a>
    </nav>
    <button id="menu-toggle" class="md:hidden text-white">
      <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M4 6h16M4 12h16M4 18h16" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path></svg>
    </button>
  </div>
  
  <div id="mobile-menu-backdrop" class="fixed inset-0 bg-black bg-opacity-90 z-60 hidden"></div>
  <div id="mobile-menu" class="fixed inset-0 z-60 hidden flex items-center justify-center transition-opacity duration-100 opacity-0">
    <button id="close-menu" class="absolute top-8 right-6 text-white text-7xl">×</button>
    <div class="flex flex-col gap-10 justify-center items-center">
      <a class="text-white text-2xl hover:text-[var(--accent-color)] transition-colors duration-300" href="/">Anasayfa</a>
      <a class="text-white text-2xl hover:text-[var(--accent-color)] transition-colors duration-300" href="/hakkimizda">Hakkımızda</a>
      <div class="relative text-center">
        <button id="mobile-hizmetler-toggle" class="text-white text-2xl hover:text-[var(--accent-color)] transition-colors duration-300 flex items-center">
          Hizmetler
          <svg class="w-6 h-6 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </button>
        <div id="mobile-hizmetler-menu" class="mt-2 w-56 bg-white rounded-md shadow-lg z-10 hidden">
          <a href="/hizmetler/ozel-mobilya-tasarimi" class="block px-4 py-2 text-gray-800 hover:bg-gray-200">Özel Mobilya Tasarımı</a>
          <a href="/hizmetler/modern-ahsap-isleri" class="block px-4 py-2 text-gray-800 hover:bg-gray-200">Modern Ahşap İşleri</a>
          <a href="/hizmetler/adan-zye-dekorasyon" class="block px-4 py-2 text-gray-800 hover:bg-gray-200">A'dan Z'ye Dekorasyon</a>
        </div>
      </div>
      <a class="text-white text-2xl hover:text-[var(--accent-color)] transition-colors duration-300" href="/portfolio">Portföy</a>
      <a class="text-white text-2xl hover:text-[var(--accent-color)] transition-colors duration-300" href="/blog">Blog</a>
      <a class="text-white text-2xl hover:text-[var(--accent-color)] transition-colors duration-300" href="/iletisim">İletişim</a>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function() {
    const header = document.getElementById('main-header');
    if (!header) return;

    const menuToggle = document.getElementById('menu-toggle');
    const closeMenu = document.getElementById('close-menu');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
    const mobileMenuLinks = document.querySelectorAll('#mobile-menu a');

    const openMobileMenu = () => {
      mobileMenu.classList.remove('hidden');
      mobileMenuBackdrop.classList.remove('hidden');
      setTimeout(() => mobileMenu.classList.remove('opacity-0'), 1);
    };

    const closeMobileMenu = () => {
      mobileMenu.classList.add('opacity-0');
      setTimeout(() => {
        mobileMenu.classList.add('hidden');
        mobileMenuBackdrop.classList.add('hidden');
      }, 1);
    };

    menuToggle.addEventListener('click', openMobileMenu);
    closeMenu.addEventListener('click', closeMobileMenu);
    mobileMenuBackdrop.addEventListener('click', closeMobileMenu);
    mobileMenuLinks.forEach(link => {
      link.addEventListener('click', closeMobileMenu);
    });

    const handleScroll = () => {
      if (window.scrollY > 70) {
        header.classList.add('fixed', 'bg-[#c97c34]', 'bg-opacity-90');
        header.classList.remove('absolute');
      } else {
        header.classList.remove('fixed', 'bg-[#c97c34]', 'bg-opacity-90');
        header.classList.add('absolute');
      }
    };

    window.addEventListener('scroll', handleScroll);

    

    // Mobile Dropdown
    const mobileToggle = document.getElementById('mobile-hizmetler-toggle');
    const mobileMenuDropdown = document.getElementById('mobile-hizmetler-menu');
    if (mobileToggle && mobileMenuDropdown) {
      mobileToggle.addEventListener('click', (e) => {
        e.stopPropagation();
        mobileMenuDropdown.classList.toggle('hidden');
      });
    }

    document.addEventListener('click', (e) => {
      if (mobileMenuDropdown && !mobileMenuDropdown.contains(e.target) && !mobileToggle.contains(e.target)) {
        mobileMenuDropdown.classList.add('hidden');
      }
    });
  });
</script>
