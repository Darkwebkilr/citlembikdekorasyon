  <script is:inline>
    function initializeHomePage() {
      // Swiper'ı başlat
      const swiperElement = document.querySelector('.mySwiper');
      if (swiperElement && typeof Swiper !== 'undefined' && !swiperElement.swiper) {
        new Swiper(".mySwiper", {
          pagination: { el: ".swiper-pagination", type: "fraction" },
          navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
        });
      }

      // Anasayfa animasyonlarını çalıştır (kaydırma ve yazı efekti)
      const elementsToAnimate = document.querySelectorAll('[data-animate="slide-up"], [data-animate-children="slide-up"]');
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-slide-up');
            if (entry.target.hasAttribute('data-animate-children')) {
              setTimeout(() => entry.target.classList.add('animate-children'), 100);
            }
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1 });
      elementsToAnimate.forEach(element => observer.observe(element));

      const heroTitleLines = document.querySelectorAll('.typewriter-line');
      if (heroTitleLines.length > 0 && !heroTitleLines[0].classList.contains('animated')) {
        heroTitleLines.forEach(line => line.classList.add('animated'));
        heroTitleLines.forEach(line => {
            line.style.width = '0';
            line.style.overflow = 'hidden';
            line.style.whiteSpace = 'nowrap';
            line.textContent = ''; 
        });
        setTimeout(() => {
            heroTitleLines.forEach((line, index) => {
                const text = line.getAttribute('data-text');
                line.textContent = text;
                const duration = 1500;
                const delay = index * 500;
                setTimeout(() => {
                    line.style.transition = `width ${duration}ms steps(40, end)`;
                    line.style.width = '100%';
                    setTimeout(() => {
                        line.style.width = 'auto';
                        line.style.overflow = 'visible';
