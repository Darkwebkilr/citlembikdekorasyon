      <script is:inline>
function initializePageAnimations() {
          
          // --- 1. Hizmetler Swiper'ı Başlat ---
          if (document.querySelector('.servicesSwiper')) {
            new Swiper('.servicesSwiper', {
              // Varsayılan (en küçük ekran) için 1 öğe
              slidesPerView: 1,
              spaceBetween: 20,
              loop: true,
              autoplay: {
                delay: 5000,
                disableOnInteraction: false,
              },
              pagination: {
                el: '.swiper-pagination',
                clickable: true,
              },
              navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
              },
              // Responsive ayarlar
              breakpoints: {
                // 640px ve üzeri ekranlar için (mobil)
                640: {
                  slidesPerView: 2,
                  spaceBetween: 30,
                },
                // 1024px ve üzeri ekranlar için (desktop)
                1024: {
                  slidesPerView: 3,
                  spaceBetween: 40,
                },
              },
            });
          }

          // --- 2. Scroll-Reveal Animasyonları (data-animate) ---
          const elementsToAnimate = document.querySelectorAll('[data-animate="slide-up"], [data-animate-children="slide-up"]');
          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                entry.target.classList.add('animate-slide-up');
                if (entry.target.hasAttribute('data-animate-children')) {
                  setTimeout(() => entry.target.classList.add('animate-children'), 100);
                }
                observer.unobserve(entry.target);
              }
            });
          }, { threshold: 0.1 });
          elementsToAnimate.forEach(element => observer.observe(element));

          // --- 3. Hero Yazı Animasyonu ---
          const heroTitleLines = document.querySelectorAll('.typewriter-line');
          if (heroTitleLines.length > 0 && !heroTitleLines[0].classList.contains('animated')) {
            heroTitleLines.forEach(line => line.classList.add('animated'));
            heroTitleLines.forEach(line => {
              line.style.width = '0'; line.style.overflow = 'hidden'; line.style.whiteSpace = 'nowrap'; line.textContent = ''; 
            });
            setTimeout(() => {
              heroTitleLines.forEach((line, index) => {
                const text = line.getAttribute('data-text'); line.textContent = text;
                const duration = 1500; const delay = index * 500;
                setTimeout(() => {
                  line.style.transition = `width ${duration}ms steps(40, end)`; line.style.width = '100%';
                  setTimeout(() => {
                    line.style.width = 'auto'; line.style.overflow = 'visible'; line.style.whiteSpace = 'normal';
                  }, duration);
                }, delay);
              });
            }, 500);
          }
        }
        document.addEventListener('astro:page-load', initializePageAnimations);
      </script>

