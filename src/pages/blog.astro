---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Form from '../components/Form.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | Çitlembik Dekorasyon" description="Ev dekorasyonu, mobilya tasarımı ve yaşam alanı düzenleme ile ilgili en yeni trendler, ipuçları ve ilham veren fikirler.">
  <main class="pt-20">
    <!-- Blog Header -->
    <section class="relative py-20 md:py-32 bg-[#202020]">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl text-white md:text-6xl font-bold mb-6">İç Tasarım Blogu</h1>
        <p class="text-xl max-w-3xl mx-auto text-gray-300">
          Ev dekorasyonu, mobilya tasarımı ve yaşam alanı düzenleme ile ilgili en yeni trendler, ipuçları ve öneriler.
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 flex flex-col">
            <a href={`/blog/${post.slug}`}>
              <img 
                src={post.data.heroImage}
                alt={post.data.title}
                class="w-full h-60 object-cover"
              />
            </a>
            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <span>{post.data.pubDate.toLocaleDateString('tr-TR', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
                <span class="mx-2">•</span>
                <span>{post.data.readTime}</span>
              </div>
              <h2 class="text-2xl font-bold mb-3 flex-grow">
                <a href={`/blog/${post.slug}`} class="hover:text-[var(--accent-color)] transition-colors">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-gray-600 mb-4">
                {post.data.description}
              </p>
              <a href={`/blog/${post.slug}`} class="text-[var(--accent-color)] font-medium hover:text-[var(--text-primary)] transition-colors">
                Devamını oku →
              </a>
            </div>
          </article>
        ))}
      </div>
    </section>
    
    <Form />
  </main>
  <Footer />
</Layout>