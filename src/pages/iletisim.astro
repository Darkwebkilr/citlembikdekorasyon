---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Buttons from "../components/Buttons.astro";
import Header from "../components/Header.astro";
---

<Layout title="İletişim | Çitlembik Dekorasyon">
<Buttons/>
      <div
        class="relative flex size-full min-h-screen flex-col group/design-root overflow-x-hidden"
      >
<Header/>
        <main class="flex-grow">
          <!-- İletişim Başlık -->
          <section class="relative py-20 md:py-32 bg-[#F8F7F5]">
            <div class="container mx-auto px-4 text-center">
              <h1 class="text-4xl md:text-6xl font-bold mb-6">İletişim</h1>
              <p class="text-xl max-w-3xl mx-auto text-[var(--text-secondary)]">
                Size nasıl yardımcı olabiliriz?
              </p>
            </div>
          </section>

          <!-- İletişim İçerik -->
          <section class="container mx-auto px-4 py-16">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
              <!-- İletişim Formu -->
              <div>
                <h2 class="text-3xl font-bold mb-8">Bize Ulaşın</h2>
                <form class="space-y-6">
                  <div>
                    <label for="name" class="block text-lg font-medium mb-2">Ad Soyad</label>
                    <input 
                      type="text" 
                      id="name" 
                      class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--accent-color)]"
                      placeholder="Adınızı ve soyadınızı girin"
                    >
                  </div>
                  <div>
                    <label for="email" class="block text-lg font-medium mb-2">E-posta</label>
                    <input 
                      type="email" 
                      id="email" 
                      class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--accent-color)]"
                      placeholder="E-posta adresinizi girin"
                    >
                  </div>
                  <div>
                    <label for="phone" class="block text-lg font-medium mb-2">Telefon</label>
                    <input 
                      type="tel" 
                      id="phone" 
                      class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--accent-color)]"
                      placeholder="Telefon numaranızı girin"
                    >
                  </div>
                  <div>
                    <label for="subject" class="block text-lg font-medium mb-2">Konu</label>
                    <select 
                      id="subject" 
                      class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--accent-color)]"
                    >
                      <option value="">Lütfen bir konu seçin</option>
                      <option value="genel">Genel Bilgi</option>
                      <option value="teklif">Fiyat Teklifi</option>
                      <option value="randevu">Randevu Talebi</option>
                      <option value="sikayet">Şikayet</option>
                      <option value="diger">Diğer</option>
                    </select>
                  </div>
                  <div>
                    <label for="message" class="block text-lg font-medium mb-2">Mesajınız</label>
                    <textarea 
                      id="message" 
                      rows="5" 
                      class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[var(--accent-color)]"
                      placeholder="Mesajınızı buraya yazın..."
                    ></textarea>
                  </div>
                  <button 
                    type="submit" 
                    class="w-full bg-[var(--accent-color)] text-[var(--text-primary)] hover:bg-[var(--text-primary)] hover:text-white transition-colors py-3 px-6 rounded-md font-medium text-lg"
                  >
                    Mesaj Gönder
                  </button>
                </form>
              </div>

              <!-- İletişim Bilgileri -->
              <div>
                <h2 class="text-3xl font-bold mb-8">İletişim Bilgilerimiz</h2>
                
                <!-- Adres -->
                <div class="flex items-start mb-8">
                  <div class="mr-4 mt-1 text-[var(--accent-color)]">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold mb-2">Adres</h3>
                    <p class="text-gray-600">
                      İnkılap Cad. No: 45<br>
                      Cihannüma Mahallesi<br>
                      Beşiktaş / İstanbul
                    </p>
                  </div>
                </div>

                <!-- Telefon -->
                <div class="flex items-start mb-8">
                  <div class="mr-4 mt-1 text-[var(--accent-color)]">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold mb-2">Telefon</h3>
                    <p class="text-gray-600">
                      <a href="tel:+902121234567" class="hover:text-[var(--accent-color)] transition-colors">+90 212 123 45 67</a><br>
                      <a href="tel:+905331234567" class="hover:text-[var(--accent-color)] transition-colors">+90 533 123 45 67</a>
                    </p>
                  </div>
                </div>

                <!-- E-posta -->
                <div class="flex items-start mb-8">
                  <div class="mr-4 mt-1 text-[var(--accent-color)]">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold mb-2">E-posta</h3>
                    <p class="text-gray-600">
                      <a href="mailto:info@citlembikdecor.com" class="hover:text-[var(--accent-color)] transition-colors">info@citlembikdecor.com</a>
                    </p>
                  </div>
                </div>

                <!-- Çalışma Saatleri -->
                <div class="flex items-start mb-8">
                  <div class="mr-4 mt-1 text-[var(--accent-color)]">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold mb-2">Çalışma Saatleri</h3>
                    <p class="text-gray-600">
                      Pazartesi - Cuma: 09:00 - 18:00<br>
                      Cumartesi: 10:00 - 16:00<br>
                      Pazar: Kapalı
                    </p>
                  </div>
                </div>

                <!-- Sosyal Medya -->
                <div>
                  <h3 class="text-xl font-semibold mb-4">Sosyal Medya</h3>
                  <div class="flex space-x-4">
                    <a href="#" class="w-12 h-12 rounded-full bg-[var(--accent-color)] flex items-center justify-center hover:bg-[var(--text-primary)] transition-colors">
                      <svg class="w-6 h-6 text-[var(--text-primary)] hover:text-white" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"></path>
                      </svg>
                    </a>
                    <a href="#" class="w-12 h-12 rounded-full bg-[var(--accent-color)] flex items-center justify-center hover:bg-[var(--text-primary)] transition-colors">
                      <svg class="w-6 h-6 text-[var(--text-primary)] hover:text-white" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"></path>
                      </svg>
                    </a>
                    <a href="#" class="w-12 h-12 rounded-full bg-[var(--accent-color)] flex items-center justify-center hover:bg-[var(--text-primary)] transition-colors">
                      <svg class="w-6 h-6 text-[var(--text-primary)] hover:text-white" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Harita -->
            <div class="mt-16">
              <h2 class="text-3xl font-bold mb-8 text-center">Bizi Ziyaret Edin</h2>
              <div class="bg-gray-200 border-2 border-dashed rounded-xl w-full h-96 flex items-center justify-center">
                <p class="text-gray-500">Harita entegrasyonu burada görünecek</p>
              </div>
            </div>
          </section>
        </main>
      </div>
    <Footer />
</Layout>
