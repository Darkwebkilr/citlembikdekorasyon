---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Form from '../components/Form.astro';

import { projects } from '../data/projects.ts';
---

<Layout 
  title="Portfolyo | Çitlembik Dekorasyon"
  description="25 yıllık tecrübemizle hayata geçirdiğimiz modern mutfak, minimalist oturma odası, endüstriyel ofis ve daha birçok projemizi keşfedin."
>
  <main class="pt-20">
    <!-- Portfolio Header -->
    <section class="relative py-20 md:py-32 bg-[#202020]">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl text-white md:text-6xl font-bold mb-6">Portfolyomuz</h1>
        <p class="text-xl max-w-3xl mx-auto text-gray-300">
          25 yıldır hayata geçirdiğimiz, her biri özgün bir hikaye anlatan projelerimiz.
        </p>
      </div>
    </section>

    <!-- Project Gallery -->
    <section class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map(project => (
          <div class="group bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 flex flex-col">
            <div class="relative overflow-hidden">
              <a href={`/portfolio/${project.slug}`}>
                <img 
                  src={project.image}
                  alt={project.title}
                  class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all duration-300"></div>
              </a>
            </div>
            <div class="p-6 flex flex-col flex-grow">
              <span class="text-sm text-gray-500 mb-1">{project.category}</span>
              <h2 class="text-xl font-bold mb-3 flex-grow">
                <a href={`/portfolio/${project.slug}`} class="hover:text-[var(--accent-color)] transition-colors">
                  {project.title}
                </a>
              </h2>
              <a href={`/portfolio/${project.slug}`} class="text-[var(--accent-color)] font-medium hover:text-[var(--text-primary)] transition-colors mt-auto">
                Detayları İncele →
              </a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <Form />
  </main>
  <Footer />
</Layout>