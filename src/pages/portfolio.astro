---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Buttons from "../components/Buttons.astro";
import Header from "../components/Header.astro";
import Bg from "../components/Bg.astro";

---


<Layout title="Portföy | Çitlembik Dekorasyon">
<Buttons/>
<Bg />
      <div
        class="relative flex size-full min-h-screen flex-col group/design-root overflow-x-hidden"
      >
<Header/>
        <main class="flex-grow mt-20">
          <!-- Portföy Başlık -->
          <section class="relative py-20 md:py-32 bg-[#202020]">
            <div class="container mx-auto px-4 text-center">
              <h1 class="text-4xl md:text-6xl text-white font-bold mb-6">Portföyümüz</h1>
              <p class="text-xl max-w-3xl mx-auto text-[var(--text-secondary)]">
                25 yıldır hayata geçirdiğimiz özel projeler
              </p>
            </div>
          </section>

          <!-- Kategori Filtreleri -->
          <section class="container mx-auto px-4 py-8">
            <div class="flex flex-wrap justify-center gap-4 mb-12">
              <button class="px-6 py-2 bg-[var(--accent-color)] text-[var(--text-primary)] rounded-full font-medium hover:bg-[var(--text-primary)] hover:text-white transition-colors">
                Tümü
              </button>
              <button class="px-6 py-2 bg-white text-[var(--text-primary)] rounded-full font-medium border border-[var(--accent-color)] hover:bg-[var(--accent-color)] transition-colors">
                Modern
              </button>
              <button class="px-6 py-2 bg-white text-[var(--text-primary)] rounded-full font-medium border border-[var(--accent-color)] hover:bg-[var(--accent-color)] transition-colors">
                Klasik
              </button>
              <button class="px-6 py-2 bg-white text-[var(--text-primary)] rounded-full font-medium border border-[var(--accent-color)] hover:bg-[var(--accent-color)] transition-colors">
                Minimalist
              </button>
              <button class="px-6 py-2 bg-white text-[var(--text-primary)] rounded-full font-medium border border-[var(--accent-color)] hover:bg-[var(--accent-color)] transition-colors">
                Eklektik
              </button>
              <button class="px-6 py-2 bg-white text-[var(--text-primary)] rounded-full font-medium border border-[var(--accent-color)] hover:bg-[var(--accent-color)] transition-colors">
                Ofis
              </button>
            </div>

            <!-- Proje Galerisi -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              <!-- Proje 1 -->
              <div class="group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                <div class="relative overflow-hidden">
                  <img 
                    src="https://images.unsplash.com/photo-1493663284031-b7e3aefcae8e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" 
                    alt="Lüks Modern Villa" 
                    class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-300 flex items-center justify-center">
                    <div class="text-white text-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      <h3 class="text-2xl font-bold mb-2">Lüks Modern Villa</h3>
                      <p>İstanbul / Bebek</p>
                    </div>
                  </div>
                </div>
                <div class="p-6 bg-white">
                  <h3 class="text-xl font-bold mb-2">Lüks Modern Villa</h3>
                  <p class="text-gray-600 mb-4">İstanbul / Bebek</p>
                  <a href="#" class="text-[var(--accent-color)] font-medium hover:text-[var(--text-primary)] transition-colors">
                    Detayları İncele →
                  </a>
                </div>
              </div>

              <!-- Proje 2 -->
              <div class="group overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                <div class="relative overflow-hidden">
                  <img 
                    src="https://images.unsplash.com/photo-1616486029423-aaa4789e8c9a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" 
                    alt="Klasik Şıklıkla Yenilenmiş Daire" 
                    class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-300 flex items-center justify-center">
                    <div class="text-white text-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
