---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import Form from '../../components/Form.astro';
import { projects } from '../../data/projects.ts';

export function getStaticPaths() {
  return projects.map((project, index) => {
    const prevProject = index === 0 ? projects[projects.length - 1] : projects[index - 1];
    const nextProject = index === projects.length - 1 ? projects[0] : projects[index + 1];
    
    return {
      params: { slug: project.slug },
      props: { project, prevProject, nextProject },
    };
  });
}

const { project, prevProject, nextProject } = Astro.props;
---

<Layout title={`${project.title} | Portfolyo - Çitlembik Dekorasyon`} description={project.description} image={project.image}>
  <main class="pt-20">
    <article>
      <!-- Project Header -->
      <section class="relative py-20 bg-gray-100">
        <div class="container mx-auto px-4 text-center">
          <p class="text-lg text-gray-500 mb-2">{project.category}</p>
          <h1 class="text-4xl md:text-6xl font-bold mb-4">{project.title}</h1>
        </div>
      </section>

      <!-- Project Image -->
      <section class="container mx-auto px-4 -mt-16">
        <div class="relative rounded-lg shadow-2xl overflow-hidden">
          <img src={project.image} alt={project.title} class="w-full h-auto object-cover max-h-[300px] md:max-h-[500px]">
        </div>
      </section>

      <!-- Project Description -->
      <section class="py-16 md:py-24 bg-white">
        <div class="container mx-auto px-4">
          <div class="max-w-3xl mx-auto prose lg:prose-xl" set:html={project.description}></div>
        </div>
      </section>

      <!-- Navigation -->
      <section class="py-12 bg-gray-50">
        <div class="container mx-auto px-4">
          <div class="flex justify-between items-center">
            <a href={`/portfolio/${prevProject.slug}`} class="group flex items-center text-gray-600 hover:text-[var(--accent-color)] transition-colors">
              <span class="text-2xl mr-3 transition-transform group-hover:-translate-x-1">←</span>
              <div>
                <p class="text-sm">Önceki Proje</p>
                <p class="font-bold">{prevProject.title}</p>
              </div>
            </a>
            <a href="/portfolio" class="text-gray-800 hover:text-[var(--accent-color)] transition-colors font-semibold">
              Tüm Projeler
            </a>
            <a href={`/portfolio/${nextProject.slug}`} class="group flex items-center text-gray-600 hover:text-[var(--accent-color)] transition-colors text-right">
              <div>
                <p class="text-sm">Sonraki Proje</p>
                <p class="font-bold">{nextProject.title}</p>
              </div>
              <span class="text-2xl ml-3 transition-transform group-hover:translate-x-1">→</span>
            </a>
          </div>
        </div>
      </section>
    </article>

    <Form />
  </main>
  <Footer />
</Layout>
